
## Heatmap with ggplot function ##

# Install package ggplot and load it

install.packages("ggplot2")
library(ggplot2)

# Read the .rds file and convert it into a matrix

data <- readRDS("data/animal_data.rds")
data <- dplyr::bind_rows(data, id = NULL)

# Heatmap

data_heatmap <- ggplot(data = data, mapping = aes (x = Longitude,
                                                   y = Latitude,
                                                   fill = Altitude))+
                                                  
  geom_tile()+
  scale_fill_gradientn(colors = c("white", "green", "red"))

data_heatmap





